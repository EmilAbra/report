{% extends 'base.html.twig' %}

{% block title %}Uppdatera detaljer{% endblock %}

{% block content %}
    <div class="book-form">
        <h1>Uppdatera detaljer</h1>

        <form method="post">
            <fieldset>

                <label for="author">Författare</label>
                <input id="author" type="text" name="author" value="{{ book.author }}">

                <label for="title">Titel</label>
                <input id="title" type="text" name="title" value="{{ book.titel }}">

                <label for="isbn">ISBN</label>
                <input id="isbn" type="text" name="isbn" value="{{ book.isbn }}">

                <label for="imgpath">Omslag(URL till bild)</label>
                <input id="imgpath" type="text" name="imgpath" value="">

                <input type="submit" name="doit" value="Bekräfta">
            </fieldset>
        </form>
    </div>

{% endblock %}
