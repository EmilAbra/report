{% extends 'base.html.twig' %}

{% block title %}Ta bort bok{% endblock %}

{% block content %}
    <div class="book-form">
        <h1>Bekräfta ta bort</h1>

        <form method="post">
            <fieldset>

                <label for="author">Författare</label>
                <input id="author" type="text" name="author" value="{{ book.author }}" readonly>

                <label for="title">Titel</label>
                <input id="title" type="text" name="title" value="{{ book.titel }}" readonly>

                <label for="isbn">ISBN</label>
                <input id="isbn" type="text" name="isbn" value="{{ book.isbn }}" readonly>

                <label for="imgpath">Omslag(URL till bild)</label>
                <input id="imgpath" type="text" name="imgpath" value="{{ book.imgpath }}" readonly>

                <input type="submit" name="doit" value="Ta bort">
            </fieldset>
        </form>
    </div>

{% endblock %}
