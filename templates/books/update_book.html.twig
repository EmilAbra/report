{% extends 'base.html.twig' %}

{% block title %}Uppdatera detaljer om en bok{% endblock %}

{% block content %}
    <div class="all-books">
        <h1>Välj titel för att uppdatera detaljer</h1>

        <table>
            <tr>
                <th>Författare</th>
                <th>Titel</th>
                <th>ISBN</th>
                <th>Omslag</th>
            </tr>
            {% for book in books %}

                <tr>
                    <th>{{ book.author }}</th>
                    <th><a href="{{ path('books_update_form', {idOfBook: book.id}) }}">{{ book.titel }}</a></th>
                    <th>{{ book.isbn }}</th>
                    <th><img src="{{ asset(book.imgpath) }}" alt="Omslag på boken {{ book.titel }}"></th>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}
