{% extends 'base_proj.html.twig' %}

{% block title %}Admin skapa profil{% endblock %}

{% block content %}
    <div class="user-form-container">
        <h1>Skapa profil</h1>

        <form method="post">
            <fieldset>
                <label for="acronym">Akronym</label>
                <input id="acronym" required type="text" name="acronym">
                
                <label for="password">Lösenord</label>
                <input id="password" required type="text" name="password">

                <label for="name">Namn</label>
                <input id="name" type="text" name="name">

                <label for="email">E-post</label>
                <input id="email" type="text" name="email">

                <label for="address">Adress</label>
                <input id="address" type="text" name="address">

                <label for="phone">Telefon</label>
                <input id="phone" type="text" name="phone">

                <label for="work">Jobb</label>
                <input id="work" type="text" name="work">

                <label for="imgpath">Bild(URL till bild)</label>
                <input id="imgpath" type="text" name="imgpath">

                <input type="submit" name="doit" value="Bekräfta">
            </fieldset>
        </form>
    </div>

{% endblock %}
