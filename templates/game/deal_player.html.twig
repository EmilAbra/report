        </form>
        <form class="game-buttons" action="{{ path('deal_bank') }}">
            <fieldset>
                <p>
                    <input type="submit"  value="Dra Bankens kort">
                </p>
            </fieldset>
        </form>
    </div>

{% endblock %}
