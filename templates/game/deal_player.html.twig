{% extends 'base.html.twig' %}

{% block title %}Spelaren drar{% endblock %}

{% block content %}
    <div class="cards-main">

        <h1>Kortspel 21</h1>
        <div class="playingCards faceImages game21">
            {{ include('/game/_card_stack.html.twig') }}
        </div>


        <div class="playingCards faceImages game21">
        </div>

        <div class="playingCards faceImages game21">
            <ul class="table">
                <div class="player"><h3>Spelare po√§ng: {{ playerScore }}</h3></div>
                {% for card in playerHand %}
                    <li>
                        <div class="card rank-{{ card.rank }} {{ card.suit }}">
