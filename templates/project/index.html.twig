{% extends 'base_proj.html.twig' %}

{% block title %}Texas Holdem{% endblock %}

{% block content %}

<div class="holdem-wrapper">
    <div class="holdem-title">
        <div class="texas-holdem">
            <h1>Texas Hold’em</h1>
        </div>
        <div class="about-project">
            <a href="{{ path('about_project') }}">Om projektet</a>
        </div>
    </div>
    <div class="holdem-ai">
        <div class="player-img">
            <img src="{{ asset(aiPlayerInfo.imgPath) }}" alt="Bild på dator-spelaren">
        </div>
        <div class="player-name">
            <h3>{{ aiPlayerInfo.firstName }} {{ aiPlayerInfo.lastName }}</h3>
        </div>
        <div class="player-saldo">
            <h3>$ {{ aiPlayerInfo.saldo }}</h3>
        </div>
    </div>

    <div class="holdem-table">
        <div class="ai-cards">

        </div>
        <div class="table-cards">
            <div class="info">
                {{ include('/project/markdown/info_texas_holdem.markdown.twig')|markdown_to_html }}
            </div>
            <div class="holdem-buttons-info">
                <form action="{{ path('deal_flopp') }}">
                    <input type="submit" value="Starta spelet" />
                </form>
            </div>
        </div>
        <div class="player-cards">

        </div>
    </div>

    <div class="holdem-player-info">
        <div class="player-img">
            <img src="{{ asset(playerInfo.imgPath) }}" alt="Bild på spelaren">
        </div>
        <div class="player-name">
            <h3>{{ playerInfo.firstName }} {{ playerInfo.lastName }}</h3>
        </div>
        <div class="player-saldo">
            <h3>$ {{ playerInfo.saldo }}</h3>
        </div>
    </div>
</div>
{% endblock %}
